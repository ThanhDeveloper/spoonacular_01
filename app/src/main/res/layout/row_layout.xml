<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_90"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIngredient"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:cardCornerRadius="@dimen/dp_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ingredient_recycler"
            android:src="@drawable/sesame" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textIngredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:fontFamily="@font/chewy"
        android:textAlignment="center"
        android:textColor="@color/colorRiverBed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardIngredient" />
</androidx.constraintlayout.widget.ConstraintLayout>
